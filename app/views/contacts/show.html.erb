<div id="frame_header_top"><div class="left"></div><div class="right"></div></div>
<div id="frame_header">
  <span class="buttons">
    <button type="button" class="save">Send</button>
  </span>
  <span class="title">Contact Us</span>
</div>

<div id="frame">
  <div id="generic_pane">
    <div class="content">
      <%= messages %>

      <% form_for :contacts do |_| %>
        <div class="field">
          <%= label_tag(:subject, 'Subject') %>
          <%= text_field_tag(:subject, @subject, :id => 'contacts_subject') %>
        </div>

        <%= label_tag(:body, 'Enter your question or concern here') %>
        <div class="field">      
          <%= text_area_tag(:body, @body, :id => 'contacts_body', :cols => 80, :rows => 12)%>
        </div>

      <% end -%>

    </div>
  </div>
</div>


<% content_for(:javascript) do -%>
  <script type="text/javascript">
    jQuery(function() {
      Fleet.init(true);
      Fleet.Frame.Header.init().open('page', {
        save: function() {
          Fleet.Frame.Header.loading(true);
          jQuery('form:first').submit();
          return false;
        }
      });
    });
  </script>
<% end -%>
