<div id="pane1">
  <%= image_tag '/images/product/connect_this_to_this.jpg', :width => 310, :height => 165 %>
  <%= image_tag '/images/product/click_here_to_buy.jpg', :width => 310, :height => 165 %>
</div>

<div id="pane3" class="corners">
  <%= messages %>

  <%= render :partial => 'wizard/steps', :locals => {:selected => :create_account} %>

  <div class="wizard">
    <div class="instructions">
      Please provide the information below to create your account. You will use this information when accessing MOBD in the future.
    </div>  
    
    <div class="indent">
      <% form_for :account, :url => account_path do |f| -%>
        <div class="field">
          <%= f.label :email, 'Enter your email address*:' %>
          <%= f.text_field :email %>
          <%= error_message_on @account, :email, :prepend_text => '* Email address ' %>
        </div>
        
        <div class="field">
          <%= f.label :login, 'Choose a login name*:' %>
          <%= f.text_field :login %>
          <%= error_message_on @account, :login, :prepend_text => '* Login ' %>
        </div>
        
        <div class="field">
          <%= f.label :password, 'Choose your password*:' %>
          <%= f.password_field :password %>
          <%= error_message_on @account, :password, :prepend_text => '* Password ' %>
        </div>
        
        <div class="field">
          <%= f.label :password_confirmation, 'Confirm your password*:' %>
          <%= f.password_field :password_confirmation %>
          <%= error_message_on @account, :password_confirmation, :prepend_text => '* Password confirmation ' %>
        </div>
        
        <div class="spacer"></div>
        <div class="buttons">
          <%= link_to '', '#', :class => 'createAccount button' %>
        </div>
      <% end -%>
    </div>
  </div>

  <div class="spacer"></div>
  <div class="spacer"></div>
  <p>Already have an account? <%= link_to 'Login now', login_path %>.</p>
</div>