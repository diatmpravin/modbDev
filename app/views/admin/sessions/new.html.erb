<%= messages %>

<% form_tag admin_login_path do -%>
  <div class="field">
    <label for="login">Login</label>
    <%= text_field_tag 'login' %>
  </div>
  <div class="field">
    <label for="password">Password</label>
    <%= password_field_tag 'password' %>
  </div>
  <div class="field">
    <label></label>
    <%= submit_tag 'Log in' %>
  </div>
<% end -%>

<div class="clear"></div>