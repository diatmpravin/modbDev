<div class="tags">
  <h3>Tags</h3>
  <ul>
    <li>
      <%= text_field_tag "#{object.class.to_s.downcase}[tag_names][]", '', 
        :id => "tag_#{dom_id(object)}", :class => 'tagEntry', :maxlength => 30 %>
    </li>
    <% object.tags.each do |tag| -%>
      <li>
        <%= link_to '', '#', :class => 'remove' %>
        <span><%= h(tag.name) %></span>
        <%= hidden_field_tag "#{object.class.to_s.downcase}[tag_names][]", tag.name %>
    <% end -%>
  </ul>
</div>
