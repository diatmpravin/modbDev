<table>
  <thead>
    <tr>
      <th rowspan="2">Date</th>
      <th rowspan="2">Miles Driven</th>
      <th rowspan="2">Average<br/>Fuel Economy</th>
      <th rowspan="2">Operating Time<br/>(hh:mm)</th>
      <th rowspan="2">Idle Time<br/>(hh:mm)</th>
      <th colspan="5">Events</th>
    </tr>
    <tr>
      <th>Speed</th>
      <th>Geofence</th>
      <th>Idle</th>
      <th>Aggressive</th>
      <th>After Hours</th>
    </tr>
  </thead>
  <tbody>
  <% report.data.each_with_index do |row,i| -%>
    <% next if row[:miles] == 0 %>
    <tr class="<%= i % 2 == 0 ? 'even' : 'odd' %>">
      <td><%= row[:date] %></td>
      <td><%= row[:miles] %></td>
      <td><%= row[:mpg] %></td>
      <td><%= row[:duration] %></td>
      <td><%= row[:idle_time] %></td>
      <td><%= row[:speed] %></td>
      <td><%= row[:geofence] %></td>
      <td><%= row[:idle_time] %></td>
      <td><%= row[:aggressive] %></td>
      <td><%= row[:after_hours] %></td>
    </tr>
  <% end -%>
  </tbody>
</table>
