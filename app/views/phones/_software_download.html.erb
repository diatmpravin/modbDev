<% content_for(:javascript) do -%>
  <%= javascript_include_tag 'software_download' %>
<% end -%>

<div id="downloadDialog" class="dialog">
  <% form_tag download_phones_path, {:autocomplete => 'off'} do -%>
    <p>Enter your phone number and carrier below. You will receive a text message
    on your phone with details on downloading the phone software.</p>
    <div class="loading"></div>
    <div class="center">
      <%= text_field_tag :phone_number, @phone_number, {:size => 10, :maxlength => 10} %>
      <%= select_tag :phone_carrier, options_for_select(carrier_collection, @phone_carrier)  %>
    </div>
  <% end -%>
</div>

<div id="activateDialog" class="dialog">
  <% form_tag activate_phones_path, {:autocomplete => 'off'} do -%>
    <p>Enter your activation code below to link your downloaded phone software to your account.</p>
    <div class="loading"></div>
    <div class="center">
      <%= text_field_tag :activation_code, @activation_code, {:size => 8, :maxlength => 8} %>
    </div>
  <% end -%>
</div>