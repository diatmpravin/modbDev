<% if node.is_a?(Device) -%>
  <div class="row device clear" id="device_<%= dom_id(node) %>">
    <div class="listing">
      <span class="tab"></span>
      <span class="indent"></span>
      <span class="name"><%= node.name %></span>
    </div>
    <div class="data">
      <span class="data">Good</span>
      <span class="data">Good</span>
      <span class="data">50</span>
      <span class="data">75</span>
      <span class="data">BAD</span>
      <span class="data">OK</span>
      <span class="data">57</span>
      <span class="data">78</span>
      <span class="data">54</span>
      <span class="after_hours">70</span>
    </div>
  </div>
<% else -%>
  <div class="row group clear" id="group_<%= dom_id(node) %>">
    <div class="listing">
      <span class="tab"></span>
      <span class="indent"></span>
      <span class="collapsible open"></span>
      <% if level > 0 -%>
        <%= link_to 'Delete', group_path(node), :class => 'delete hover-only', :title => 'Remove Group' %>
        <%= link_to 'Edit', edit_group_path(node), :class => 'edit hover-only', :title => 'Edit Group' %>
        <!-- <%= link_to 'Live Look', live_look_group_path(node), :class => 'liveLook hover-only', :title => 'Live Look' %> -->
        <!-- <%= link_to 'Geofences', group_geofences_path(node), :class => 'geofence hover-only', :title => 'Geofences' %> -->
      <% end -%>
      <span class="name"><%= node.name %></span>
    </div>
    
    <% if level > 0 -%>
      <% #report = group_report(node) -%>
      
      <div class="data">
        <span class="data">Good</span>
        <span class="data">Good</span>
        <span class="data">50</span>
        <span class="data">75</span>
        <span class="data">OK</span>
        <span class="data">BAD</span>
        <span class="data">57</span>
        <span class="data">78</span>
        <span class="data">54</span>
        <span class="after_hours">70</span>
      </div>
    <% end -%>
  </div>
<% end -%>
